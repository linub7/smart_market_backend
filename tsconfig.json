{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2016",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "routes/*": ["./src/routes/*"],
      "controllers/*": ["./src/controllers/*"],
      "middlewares/*": ["./src/middlewares/*"],
      "utils/*": ["./src/utils/*"],
      "models/*": ["./src/models/*"],
      "mail/*": ["./src/mail/*"],
      "constants/*": ["./src/constants/*"],
      "src/*": ["./src/*"]
    }
  }
}
